# Bitcoin District Production Site
# Caddy v2 configuration with automatic HTTPS

{
    # Global options
    email admin@bitcoindistrict.org
    # Caddy in Docker automatically uses /data for certificate storage
}

# Directus admin UI and API - subdomain approach (recommended by Directus)
admin.bitcoindistrict.org {
    # Automatic HTTPS via Let's Encrypt
    
    # Enable gzip compression
    encode gzip

    # Access logging
    log {
        output file /data/logs/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }

    # Handle assets endpoint with CORS headers for cross-origin requests
    # This is critical for iOS Safari which is stricter about CORS
    # Use handle (not handle_path) to preserve full /assets/{id} path for Directus
    
    # Handle preflight OPTIONS requests separately
    @options method OPTIONS path /assets*
    handle @options {
        header Access-Control-Allow-Origin "https://staging.bitcoindistrict.org"
        header Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
        header Access-Control-Allow-Headers "Range"
        header Access-Control-Expose-Headers "Content-Range, Content-Length, Accept-Ranges"
        header Vary "Origin"
        respond 204
    }
    
    # Handle GET/HEAD requests for assets with CORS headers
    handle /assets* {
        reverse_proxy http://directus:8055 {
            # CORS response headers (header_down sets response headers)
            header_down Access-Control-Allow-Origin "https://staging.bitcoindistrict.org"
            header_down Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
            header_down Access-Control-Allow-Headers "Range"
            header_down Access-Control-Expose-Headers "Content-Range, Content-Length, Accept-Ranges"
            header_down Vary "Origin"
            header_down Cache-Control "public, max-age=31536000, immutable"
            header_down X-Content-Type-Options "nosniff"
            
            # Request headers to forward to Directus
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }

    # Proxy to Directus container (use container name, not localhost)
    handle {
        reverse_proxy http://directus:8055 {
            # Forward real client information
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            
            # Timeouts for longer operations
            transport http {
                dial_timeout 10s
                response_header_timeout 60s
            }
        }
    }
}

staging.bitcoindistrict.org {
    # Automatic HTTPS via Let's Encrypt (email configured globally above)
    
    # Enable gzip compression
    encode gzip

    # Access logging with rotation
    log {
        output file /data/logs/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }

    # Directus assets - proxy to directus container
    # FIX: Use 'handle' (NOT handle_path) so Directus receives the '/assets' prefix
    handle /assets* {
        # Standardize Cache for mobile performance
        header Cache-Control "public, max-age=31536000, immutable"
        
        reverse_proxy http://directus:8055 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            
            # Ensure Range headers are respected for iOS audio/video
            header_down +Accept-Ranges "bytes"
        }
    }

    # Main Astro site - proxy to astro container
    handle {
        reverse_proxy http://astro:4321 {
            # Forward real client information
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            
            # Health check
            health_uri /
            health_interval 30s
            health_timeout 5s
            
            # Timeouts
            transport http {
                dial_timeout 10s
                response_header_timeout 30s
            }
        }
    }

    # Security headers
    header {
        # HSTS (HTTP Strict Transport Security)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Permissions Policy (formerly Feature Policy)
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        
        # Remove server identification
        -Server
    }

    # Error pages
    handle_errors {
        @5xx expression `{err.status_code} >= 500 && {err.status_code} < 600`
        handle @5xx {
            respond "Service temporarily unavailable. Please try again later." 503
        }
        
        @4xx expression `{err.status_code} >= 400 && {err.status_code} < 500`
        handle @4xx {
            respond "The requested resource was not found." 404
        }
    }
}

# Redirect www to non-www (if needed in future)
# www.staging.bitcoindistrict.org {
#     redir https://staging.bitcoindistrict.org{uri} permanent
# }
