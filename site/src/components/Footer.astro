---
import NostrIcon from "./icons/Nostr.astro";
import NewsletterSubscribe from "./NewsletterSubscribe.astro";
import { siteConfig } from "../config/site.ts";

interface FooterLink {
  text?: string;
  href?: string;
  ariaLabel?: string;
}

interface SocialLink {
  ariaLabel: string;
  icon: string;
  href: string;
}

interface FooterLinks {
  title?: string;
  links: Array<FooterLink>;
}

export interface Props {
  links?: Array<FooterLinks>;
  secondaryLinks?: Array<FooterLink>;
  socialLinks?: Array<SocialLink>;
  footNote?: string;
  theme?: string;
  newsletter?: {
    title?: string;
    description?: string;
    enabled?: boolean;
  };
}

const { 
  socialLinks = siteConfig.socialLinks, 
  secondaryLinks = siteConfig.footerData.secondaryLinks, 
  links = siteConfig.footerData.links, 
  footNote = siteConfig.footNote, 
  theme = 'light',
  newsletter = siteConfig.footerData.newsletter
} = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="absolute inset-0 pointer-events-none" style="background-color: #0e0535;" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-white"
  >
    <div class="flex flex-col lg:flex-row lg:justify-between gap-8 py-8 md:py-12">
      <div class="lg:flex-shrink-0">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl text-white hover:text-gray-300 transition duration-150 ease-in-out" href="/">{siteConfig.title}</a>
        </div>
        <div class="text-sm flex gap-1 mb-4 text-gray-300">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-gray-300 hover:text-white hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
        
        {newsletter?.enabled && (
          <div class="max-w-sm hidden lg:block">
            <div class="mb-2">
              <h3 class="text-sm font-medium text-white">{newsletter.title || 'Newsletter'}</h3>
              {newsletter.description && (
                <p class="text-xs text-gray-300 mt-1">{newsletter.description}</p>
              )}
            </div>
            <NewsletterSubscribe
              variant="compact"
              placeholder="Your email"
              buttonText="Subscribe"
              label="Bitcoin District - Footer"
            />
          </div>
        )}
      </div>
      {
        links.length > 0 && (
          <div class="flex flex-col sm:flex-row gap-8 sm:gap-12 lg:gap-16">
            {
              links.map(({ title, links }) => (
                <div class="flex-shrink-0">
                  <div class="text-white font-medium mb-2">{title}</div>
                  {links && Array.isArray(links) && links.length > 0 && (
                    <ul class="text-sm">
                      {links.map((link: any) => (
                        <li class="mb-2">
                          <a
                            class="text-gray-300 hover:text-white hover:underline transition duration-150 ease-in-out"
                            href={link.href}
                            aria-label={link.ariaLabel}
                          >
                            <Fragment set:html={link.text} />
                          </a>
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              ))
            }
          </div>
        )
      }
    </div>
    
    <!-- Newsletter for mobile - appears above social links -->
    {newsletter?.enabled && (
      <div class="lg:hidden border-t border-gray-700 pt-6 pb-6">
        <div class="mb-3">
          <h3 class="text-sm font-medium text-white">{newsletter.title || 'Newsletter'}</h3>
          {newsletter.description && (
            <p class="text-xs text-gray-300 mt-1">{newsletter.description}</p>
          )}
        </div>
        <NewsletterSubscribe
          variant="compact"
          placeholder="Your email"
          buttonText="Subscribe"
          label="Bitcoin District - Footer"
        />
      </div>
    )}
    
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, icon }) => (
              <li>
                <a
                  class="text-gray-300 hover:bg-white hover:bg-opacity-10 focus:outline-none focus:ring-4 focus:ring-white focus:ring-opacity-30 rounded-lg text-sm p-2.5 inline-flex items-center transition duration-150 ease-in-out"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon === 'nostr' ? (
                    <NostrIcon class="w-5 h-5" />
                  ) : icon === 'tabler:brand-x' ? (
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  ) : icon === 'tabler:brand-github' ? (
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                      <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2z"/>
                    </svg>
                  ) : null}
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 text-gray-300">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>

