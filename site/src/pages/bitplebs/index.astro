---
import Layout from "../../layouts/Layout.astro";
import { getEventsByTag, getDirectusUrl, type Event } from "../../lib/directus";
import dcbitplebsLogo from "../../assets/images/logos/dcbitplebs.png";

// Prevent caching to ensure fresh data from Directus
Astro.response.headers.set('Cache-Control', 'no-cache, must-revalidate');

const cmsEnabled = import.meta.env.PUBLIC_CMS_ENABLED === "true";

let events: Event[] = [];
let error: string | null = null;

if (cmsEnabled) {
  const result = await getEventsByTag("bitplebs");
  if (result.error) {
    error = result.error;
    console.error("[BitPlebs Page] Error fetching events:", result.error);
  } else {
    events = result.data || [];
    console.log(`[BitPlebs Page] Loaded ${events.length} event(s)`);
  }
} else {
  console.warn("[BitPlebs Page] CMS is disabled (PUBLIC_CMS_ENABLED !== 'true')");
}

const DIRECTUS_URL = getDirectusUrl();

// Find the next upcoming event or the most recent past event
const now = new Date();
const upcomingEvents = events.filter(e => new Date(e.start_date_time) > now);
const pastEvents = events.filter(e => new Date(e.start_date_time) <= now);

const featuredEvent = upcomingEvents.length > 0 
  ? upcomingEvents[0] 
  : pastEvents[0];

// Helper function to get the display description (prefer custom_agenda)
const getEventDescription = (event: Event) => {
  return event.custom_agenda || event.description;
};

const seo = {
  title: "DC BitPlebs | Bitcoin District",
  description:
    "Join DC BitPlebs - a community meetup for Bitcoin enthusiasts in the DC area. Learn, connect, and discuss Bitcoin with local plebs.",
};
---

<Layout seo={seo}>
  <main class="bitplebs-page">
    <header class="bitplebs-hero">
      <div class="hero-content">
        <img src={dcbitplebsLogo.src} alt="DC BitPlebs Logo" class="hero-logo" />
        <h1>DC BitPlebs</h1>
        <p class="hero-description">
          DC BitPlebs is a recurring community meetup for Bitcoin enthusiasts, builders, and plebs in the Washington DC area. 
          Join us to discuss Bitcoin technology, share ideas, and connect with fellow Bitcoiners in a casual, welcoming environment.
        </p>
      </div>
    </header>

    {error ? (
      <section class="event-error" aria-live="polite">
        <p>
          {error === "NOT_FOUND" 
            ? "No BitPlebs events found." 
            : "Unable to load events at this time. Please try again later."}
        </p>
      </section>
    ) : featuredEvent ? (
      <section class="featured-event" aria-labelledby="featured-event-title">
        <div class="event-badge">
          {new Date(featuredEvent.start_date_time) > now ? "Next Event" : "Latest Event"}
        </div>
        
        <article class="event-card">
          <a href={`/bitplebs/${featuredEvent.id}`} class="event-image-link">
            <img 
              src={dcbitplebsLogo.src} 
              alt="DC BitPlebs" 
              class="event-logo"
            />
          </a>
          
          <div class="event-content">
            <h2 id="featured-event-title" class="event-title">
              <a href={`/bitplebs/${featuredEvent.id}`}>
                {featuredEvent.title}
              </a>
            </h2>
            
            <div class="event-meta">
              <div class="event-meta-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <time datetime={featuredEvent.start_date_time}>
                  {new Date(featuredEvent.start_date_time).toLocaleDateString("en-US", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>
              
              <div class="event-meta-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span>
                  {new Date(featuredEvent.start_date_time).toLocaleTimeString("en-US", {
                    hour: "numeric",
                    minute: "2-digit",
                    hour12: true,
                  })}
                  {featuredEvent.end_date_time && ` - ${new Date(featuredEvent.end_date_time).toLocaleTimeString("en-US", {
                    hour: "numeric",
                    minute: "2-digit",
                    hour12: true,
                  })}`}
                </span>
              </div>

              {featuredEvent.location && typeof featuredEvent.location === 'object' && (
                <div class="event-meta-item">
                  <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  <div>
                    <div class="venue-name">{featuredEvent.location.name}</div>
                    {featuredEvent.location.address && (
                      <div class="venue-address">{featuredEvent.location.address}</div>
                    )}
                  </div>
                </div>
              )}
            </div>

            {getEventDescription(featuredEvent) && (
              <div class="event-description" set:html={getEventDescription(featuredEvent).replace(/<[^>]*>/g, '').substring(0, 200) + (getEventDescription(featuredEvent).length > 200 ? '...' : '')}></div>
            )}

            <div class="event-actions">
              {featuredEvent.rsvp_url && (
                <a 
                  href={featuredEvent.rsvp_url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="btn btn-primary"
                >
                  Register
                  <svg class="btn-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                </a>
              )}
              <a 
                href={`/bitplebs/${featuredEvent.id}`} 
                class="btn btn-secondary"
              >
                View Details
              </a>
            </div>
          </div>
        </article>
      </section>
    ) : (
      <section class="no-events">
        <p>No BitPlebs events scheduled yet. Check back soon!</p>
      </section>
    )}
  </main>
</Layout>

<style>
  .bitplebs-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .bitplebs-hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-logo {
    width: 150px;
    height: auto;
    margin: 0 auto 2rem;
    display: block;
    animation: fadeIn 0.6s ease-out;
  }

  .bitplebs-hero h1 {
    font-size: 3rem;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    color: #111;
    font-weight: 800;
    animation: fadeIn 0.8s ease-out;
  }

  .hero-description {
    max-width: 65ch;
    margin: 0 auto;
    font-size: 1.2rem;
    line-height: 1.7;
    color: rgba(0, 0, 0, 0.7);
    animation: fadeIn 1s ease-out;
  }

  .event-error,
  .no-events {
    text-align: center;
    padding: 3rem 1rem;
    color: rgba(0, 0, 0, 0.6);
    font-size: 1.1rem;
  }

  .featured-event {
    position: relative;
  }

  .event-badge {
    display: inline-block;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .event-card {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .event-image-link {
    display: block;
    width: 280px;
    height: 280px;
    flex-shrink: 0;
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    transition: transform 0.3s ease;
  }

  .event-image-link:hover {
    transform: scale(1.05);
  }

  .event-logo {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .event-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .event-title {
    font-size: 2rem;
    line-height: 1.2;
    margin: 0;
    color: #111;
    font-weight: 700;
  }

  .event-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .event-title a:hover {
    color: #667eea;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .event-meta-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 1rem;
    color: rgba(0, 0, 0, 0.75);
  }

  .icon {
    flex-shrink: 0;
    color: #667eea;
    margin-top: 2px;
  }

  .venue-name {
    font-weight: 600;
    color: rgba(0, 0, 0, 0.85);
  }

  .venue-address {
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.6);
    margin-top: 0.25rem;
  }

  .event-description {
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(0, 0, 0, 0.7);
  }

  .event-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    border-color: #667eea;
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
  }

  .btn-icon {
    flex-shrink: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .bitplebs-page {
      padding: 2rem 1rem;
    }

    .bitplebs-hero {
      margin-bottom: 3rem;
      padding: 1rem 0;
    }

    .hero-logo {
      width: 120px;
      margin-bottom: 1.5rem;
    }

    .bitplebs-hero h1 {
      font-size: 2.25rem;
      margin-bottom: 1rem;
    }

    .hero-description {
      font-size: 1.05rem;
    }

    .event-card {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem;
    }

    .event-image-link {
      width: 100%;
      max-width: 280px;
      height: auto;
      aspect-ratio: 1;
      margin: 0 auto;
    }

    .event-title {
      font-size: 1.65rem;
    }

    .event-meta-item {
      font-size: 0.95rem;
    }

    .event-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .bitplebs-hero h1 {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .event-card {
      padding: 1.5rem;
    }

    .event-title {
      font-size: 1.5rem;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>
