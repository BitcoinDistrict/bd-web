---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink, getAsset } from '~/utils/permalinks';
import NewsletterSubscribe from '~/components/widgets/NewsletterSubscribe.astro';
import NostrIcon from '~/components/icons/NostrIcon.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
  newsletter?: {
    title?: string;
    description?: string;
    enabled?: boolean;
  };
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light', newsletter } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="bg-page dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="flex flex-col lg:flex-row lg:justify-between gap-8 py-8 md:py-12">
      <div class="lg:flex-shrink-0">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl" href={getHomePermalink()}>{SITE?.name}</a>
        </div>
        <div class="text-sm text-muted flex gap-1 mb-4">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
        
        {newsletter?.enabled && (
          <div class="max-w-sm hidden lg:block">
            <div class="mb-2">
              <h3 class="text-sm font-medium dark:text-gray-300">{newsletter.title || 'Newsletter'}</h3>
              {newsletter.description && (
                <p class="text-xs text-muted dark:text-gray-400 mt-1">{newsletter.description}</p>
              )}
            </div>
            <NewsletterSubscribe
              variant="compact"
              placeholder="Your email"
              buttonText="Subscribe"
              label="Bitcoin District - Footer"
            />
          </div>
        )}
      </div>
      {
        links.length > 0 && (
          <div class="flex flex-col sm:flex-row gap-8 sm:gap-12 lg:gap-16">
            {
              links.map(({ title, links }) => (
                <div class="flex-shrink-0">
                  <div class="dark:text-gray-300 font-medium mb-2">{title}</div>
                  {links && Array.isArray(links) && links.length > 0 && (
                    <ul class="text-sm">
                      {links.map(({ text, href, ariaLabel }) => (
                        <li class="mb-2">
                          <a
                            class="text-muted hover:text-gray-700 hover:underline dark:text-gray-400 transition duration-150 ease-in-out"
                            href={href}
                            aria-label={ariaLabel}
                          >
                            <Fragment set:html={text} />
                          </a>
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              ))
            }
          </div>
        )
      }
    </div>
    
    <!-- Newsletter for mobile - appears above social links -->
    {newsletter?.enabled && (
      <div class="lg:hidden border-t border-gray-200 dark:border-slate-700 pt-6 pb-6">
        <div class="mb-3">
          <h3 class="text-sm font-medium dark:text-gray-300">{newsletter.title || 'Newsletter'}</h3>
          {newsletter.description && (
            <p class="text-xs text-muted dark:text-gray-400 mt-1">{newsletter.description}</p>
          )}
        </div>
        <NewsletterSubscribe
          variant="compact"
          placeholder="Your email"
          buttonText="Subscribe"
          label="Bitcoin District - Footer"
        />
      </div>
    )}
    
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon === 'nostr' ? <NostrIcon class="w-5 h-5" /> : icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
            <li>
              <a
                class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                aria-label="RSS Feed"
                href={getAsset('/rss.xml')}
              >
                <Icon name="tabler:rss" class="w-5 h-5" />
              </a>
            </li>
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 dark:text-muted">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
