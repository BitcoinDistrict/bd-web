---
import { Image } from 'astro:assets';
import HeroLayout from '~/layouts/HeroLayout.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import featureImage from '~/assets/images/feature1.jpg';
import { faqs } from '~/data/faqs';
import { createHero, HERO_IMAGES } from '~/utils/hero';

const metadata = {
  title: 'About Bitcoin District - Bitcoin District',
  description: 'Learn about Bitcoin District, a network of Bitcoiners in the greater DC, Maryland and Virginia metro area. Discover our community, mission, and how to get involved.',
};

const hero = createHero({
  image: HERO_IMAGES.about,
  title: 'About Bitcoin District',
  subtitle: 'Bitcoin District is a network of Bitcoiners who live and work around the greater DC, Maryland and Virginia (DMV) metro area.',
  alt: 'About Bitcoin District community',
});
---

<HeroLayout metadata={metadata} hero={hero}>

  <!-- Features3 Widget with Image ********** -->

  <!-- Standalone Image Display -->
  <div slot="hero-bottom" class="w-full mx-auto px-4 sm:px-6 lg:max-w-6xl mb-12">
    <div class="relative w-full max-w-full overflow-hidden rounded-sm sm:rounded-l shadow-lg">
      <Image
        src={featureImage}
        alt="Bitcoin District Photo"
        class="w-full object-cover object-center"
        width={1200}   />
    </div>
  </div>

  <Features3
    slot="hero-bottom"
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Shared Interest',
        description:
          'We come from all walks of life brought together by the common belief that Bitcoin can help make the world a better place',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Community',
        description:
          "We're not a lobby, a company, an institute, a foundation, a building or a coworking space.",
        icon: 'tabler:users-group',
      },
      {
        title: 'Volunteers',
        description:
          'The Bitcoin District website and any social media accounts are tools to help communicate public events organized by local Bitcoiners.',
        icon: 'tabler:mood-happy',
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Get answers to common questions about Bitcoin District, our community, and how you can get involved."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={faqs.map(faq => ({ title: faq.question, description: faq.answer }))}
  />
</HeroLayout>
