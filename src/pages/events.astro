---
import MeetupEvents from '~/components/widgets/MeetupEvents.astro';
import ImageStripGallery from '~/components/widgets/ImageStripGallery.astro';
import HeroLayout from '~/layouts/HeroLayout.astro';
import { createHero, HERO_IMAGES, SCROLL_INDICATOR_PRESETS } from '~/utils/hero';

const metadata = {
  title: 'Events',
};

// Configure hero with Lincoln image and events content
const hero = createHero({
  image: HERO_IMAGES.events, // This is hero-lincoln.jpg
  alt: 'Events in Bitcoin District',
  opacity: 'opacity-15 dark:opacity-30',
  title: 'Events in the District',
  subtitle: 'Washington D.C. is a hub for Bitcoiners, organizations and companies building on Bitcoin. This events page aims to be a central location for all Bitcoiners to find events in the DC, Maryland & Virginia (DMV) area.',
  actions: [{
    text: 'Subscribe to our Calendar',
    href: '/events.ics',
    icon: 'tabler:calendar-down',
    variant: 'primary'
  }]
});
---

<HeroLayout 
  metadata={metadata} 
  hero={hero}
  scrollIndicator={SCROLL_INDICATOR_PRESETS.accent}
  contentBackground={{ type: 'solid', opacityClass: 'opacity-90' }}
>
  <ImageStripGallery slot="hero-bottom" galleryKey="eventsHero" maxImages={6} animationDurationMs={60000} heightClass="h-28 sm:h-32 md:h-36 lg:h-40" ariaLabel="Event photos" />
  <!-- MeetupEvents Widget *********** -->

  <MeetupEvents
    title="Upcoming Events"
    subtitle="Don't miss out on these upcoming Bitcoin District meetups and events"
    maxEvents={12}
  />

</HeroLayout>
