---
import HeroText from '~/components/widgets/HeroText.astro';
import MeetupEvents from '~/components/widgets/MeetupEvents.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Events',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <HeroText
    title="Events in the District"
    subtitle="Washington D.C. is becoming a hub for Bitcoiners as well as organizations and companies that are building on Bitcoin or advocating for good policy. This events page aims to be a central location for all Bitcoiners to find events in the District"
    callToAction={{
      text: 'Subscribe to our Calendar',
      href: '/events.ics',
      icon: 'tabler:calendar-down',
      variant: 'primary'
    }}
  />

  <!-- MeetupEvents Widget *********** -->

  <MeetupEvents
    title="Upcoming Events"
    subtitle="Don't miss out on these upcoming Bitcoin District meetups and events"
  />

</Layout>
