---
import HeroLayout from '~/layouts/HeroLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import { HERO_IMAGES } from '~/utils/hero';

const metadata = {
  title: 'Contact',
};
const hero = {
  image: HERO_IMAGES.default,
  opacity: 'opacity-10',
  title: 'Connect with us',
  subtitle: 'The best way to connect with Bitcoiners in the DMV is to come to an event or meetup and say hi! If you\'d like to get in touch with us over email, please use the form below and a community member will get back to you.',
};
---

<HeroLayout metadata={metadata} hero={hero} showScrollIndicator={false}>
  <div slot="content">
    <ContactUs
      id="form"
      inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Name',
        },
        {
          type: 'email',
          name: 'email',
          label: 'Email',
        },
        {
          type: 'tel',
          name: 'phone',
          label: 'Phone (optional)',
        },
        {
          type: 'text',
          name: 'organization',
          label: 'Organization (optional)',
        },
      ]}
      textarea={{
        label: 'Message',
      }}
      description={`You can also find us on <a href="https://primal.net/p/npub1mcke7stw5mrqp97lmdu0qdrfcz2uertdsy2n9pzvfnsdutx3hvkq7d5mnw" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">Nostr</a> & <a href="https://x.com/BTCDistrict" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">X</a>. We value your privacy and so should you! Click here for some <a href="https://awesome-privacy.xyz/communication/mail-forwarding" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800">awesome privacy tips.</a>`}
    />
  </div>

</HeroLayout>
