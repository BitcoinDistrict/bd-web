---
import BookClubList from '~/components/widgets/BookClubList.astro';
import BookRibbon from '~/components/widgets/BookRibbon.astro';
import HeroLayout from '~/layouts/HeroLayout.astro';
import { createHero, HERO_IMAGES } from '~/utils/hero';

const metadata = {
  title: 'Bitcoin District Book Club - Bitcoin District',
  description: 'Join our monthly Bitcoin book club discussions. We explore books on Bitcoin, money, economics, and freedom tech topics. All are welcome to join any time.',
};

const hero = createHero({
  image: HERO_IMAGES.bookclub,
  title: 'Bitcoin District Book Club',
  subtitle: 'We get together every month to discuss a book related to Bitcoin, money, economics, or other topics adjacent to the Bitcoin ecosystem. All are welcome to join any time.',
  alt: 'Bitcoin District Book Club meetings',
});

// Preload the book club data to improve initial loading performance
import { bookClubBooks } from '~/data/bookclub';
---

<HeroLayout metadata={metadata} hero={hero}>

  <!-- Book Ribbon Widget in Hero Section ******************* -->
  <BookRibbon 
    slot="hero-bottom"
    classes={{
      container: "!py-6 md:!py-8" // Reduce from default spacing
    }}
  />

  <!-- Book Club List Widget ******************* -->
  
  <BookClubList
    title="Our Reading List"
    subtitle="Explore the books we've read and plan to read together. Click on any book title to purchase it."
    classes={{ 
      container: "!pb-16 md:!pb-20",
    }}
  />

</HeroLayout>
