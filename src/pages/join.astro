---
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import NewsletterSubscribe from '~/components/widgets/NewsletterSubscribe.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import coffeetourImage from '~/assets/images/coffeetour.jpg';
import { communityReasons } from '~/data/reasons';
import { testimonials } from '~/data/testimonials';

const metadata = {
  title: 'Join Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    title="Join the Bitcoin District Community"
    subtitle="We're a group of people living & working in the DMV who are passionate about Bitcoin and freedom technology. We're here to help you learn, grow, and connect with others in the community."
    image={{
      src: coffeetourImage,
      alt: 'Bitcoin District',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Be part of a growing community"
    columns={3}
    items={communityReasons}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Totally Real Testimonials from the Community"
    subtitle="(Don't trust us. Verify by coming to a meetup to see for yourself!)"
    testimonials={testimonials}
  />

  <!-- Newsletter Subscribe Widget *** -->

  <section class="bg-gray-50 dark:bg-gray-900 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <NewsletterSubscribe
        title="Subscribe to our newsletter"
        subtitle="We'll send you weekly updates about upcoming events, news, and other community announcements about Bitcoin in the District."
        showName={true}
        label="Bitcoin District - Join Page"
      />
    </div>
  </section>
</Layout>
